# FabZClean Environment Configuration
# Copy this file to .env and update values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=5000

# Your home server's IP address (for CORS and API access)
# Example: STATIC_IP=192.168.1.100
STATIC_IP=

# Database path (for Docker, use /app/data/fabzclean.db)
DATABASE_PATH=/app/data/fabzclean.db

# Skip sample data on first run (for production)
# When true, only creates admin user: admin@myfabclean.com / Durai@2025
SKIP_SAMPLE_DATA=true

# ============================================
# Security
# ============================================
# Generate a secure random string for production:
# openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================
# CORS - Allowed Origins
# ============================================
# Comma-separated list of allowed origins
# All *.myfabclean.com and *.motorprt.com domains are allowed by default
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# WhatsApp / MSG91 Integration (Optional)
# ============================================
MSG91_AUTH_KEY=
MSG91_SENDER_ID=
MSG91_INTEGRATED_NUMBER=
MSG91_TEMPLATE_ORDER_CREATED=
MSG91_TEMPLATE_ORDER_STATUS=

# ============================================
# MongoDB (Optional - app works without it)
# ============================================
MONGODB_URI=

# ============================================
# External APIs (Optional)
# ============================================
EXTERNAL_API_KEY=
EXTERNAL_API_BASE_URL=

# ============================================
# Supabase (Optional - for cloud sync)
# ============================================
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
