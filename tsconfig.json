{
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    "**/DynamoDBStorage.ts",
    "**/enhanced-routes.ts",
    "**/MemStorage.ts",
    "**/database-optimization.ts",
    "**/route-algorithms.ts",
    "**/hybrid-logger.ts",
    "**/id-generator.ts",
    "**/route-optimization.service.ts",
    "**/use-realtime.ts",
    "**/use-global-search.tsx",
    "**/api-client.ts",
    "**/universal-auth.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2020",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "./client/src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    }
  }
}