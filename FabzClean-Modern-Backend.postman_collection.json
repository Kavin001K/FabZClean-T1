{
  "info": {
    "name": "FabzClean Modern Backend (Option B)",
    "_postman_id": "fabzclean-modern-collection-001",
    "description": "Postman Collection for the improved modern backend (Python/Flask/MySQL) using JWT auth, Admin sessions, Worker tokens, and secure endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Environment Setup",
      "item": [
        {
          "name": "Set Base URL (Manual)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/healthz"
          }
        }
      ]
    },
    {
      "name": "Auth (Customer JWT)",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"9876543210\"\n}"
            },
            "url": "{{base_url}}/api/v1/auth/register"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{base_url}}/api/v1/auth/login"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let res = pm.response.json();",
                  "pm.environment.set('access_token', res.access_token);",
                  "pm.environment.set('refresh_token', res.refresh_token);"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{refresh_token}}" }
            ],
            "url": "{{base_url}}/api/v1/auth/refresh"
          }
        },
        {
          "name": "Get Profile (me)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": "{{base_url}}/api/v1/customers/"
          }
        }
      ]
    },
    {
      "name": "Services",
      "item": [
        {
          "name": "List Services (Public)",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/services/"
          }
        },
        {
          "name": "Create Service (Admin JWT or Elevated Token)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Dry Cleaning\",\n  \"price\": 150,\n  \"duration_minutes\": 60\n}"
            },
            "url": "{{base_url}}/api/v1/services/"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order (Customer JWT)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"service_id\": 1,\n  \"pickup_date\": \"2025-01-01\",\n  \"instructions\": \"Handle gently\"\n}"
            },
            "url": "{{base_url}}/api/v1/orders/"
          }
        },
        {
          "name": "List My Orders",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": "{{base_url}}/api/v1/orders/"
          }
        },
        {
          "name": "Update Order",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"instructions\": \"New instructions\",\n  \"pickup_date\": \"2025-02-01\"\n}"
            },
            "url": "{{base_url}}/api/v1/orders/1"
          }
        },
        {
          "name": "Delete Order",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": "{{base_url}}/api/v1/orders/1"
          }
        }
      ]
    },
    {
      "name": "Workers (Token Auth)",
      "item": [
        {
          "name": "Register Worker (Admin/Elevated)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Worker 1\",\n  \"email\": \"worker1@example.com\"\n}"
            },
            "url": "{{base_url}}/api/v1/workers/register"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let res = pm.response.json();",
                  "pm.environment.set('worker_token', res.token);"
                ]
              }
            }
          ]
        },
        {
          "name": "Worker Scan",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{worker_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"order_number\": \"your_order_number_here\",\n  \"action\": \"picked_up\",\n  \"location\": \"Store Front\"\n}"
            },
            "url": "{{base_url}}/api/v1/workers/scan"
          }
        }
      ]
    },
    {
      "name": "Tracks",
      "item": [
        {
          "name": "List Tracks (Public/Restricted)",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/tracks/"
          }
        }
      ]
    },
    {
      "name": "Admin (Session Based)",
      "item": [
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"supersecurepassword\"\n}"
            },
            "url": "{{base_url}}/admin/login"
          }
        },
        {
          "name": "List Customers",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Cookie", "value": "{{admin_session_cookie}}" }
            ],
            "url": "{{base_url}}/admin/api/customers"
          }
        },
        {
          "name": "Admin Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Cookie", "value": "{{admin_session_cookie}}" }
            ],
            "url": "{{base_url}}/admin/logout"
          }
        }
      ]
    }
  ],
  "auth": {},
  "event": []
}

